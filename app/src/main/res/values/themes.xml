<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jym" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_activity</item>
        style name="AppTheme.NoActionBar">

    </style>
    <style name="RecyclerView">
        <item name="android:background">@color/colorBackgroundRecyclerView</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>>
    </style>

    <style name="MyCardView" parent="Base.CardView">
        <item name="cardBackgroundColor">@color/colorBackgroundCardView</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>
    <style name="TextViewText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextViewTextPast">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPastSet</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="TextViewLabelTopCard">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextTab</item>
        <item name="android:typeface">monospace</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextViewLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#6c6c70</item>
        <item name="android:typeface">monospace</item>

        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>